{
  "manifest_version": 2,
  "name": "Owlie",
  "version": "1.0.0",
  "icons": {
    "16": "./owlie.svg",
    "20": "./owlie.svg",
    "48": "./owlie.svg"
  },
  "background": {
    "scripts": [
      "./static/js/background.js"
    ],
    "persistent": true,
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./static/js/content.js"
      ],
      "css": [
        "./static/css/content.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "./index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ]
}
